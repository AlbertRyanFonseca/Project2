{{> filter-bar }}
<section class="container">
    <div class="row mt-3">
        {{#each posts as |post|}}
        <div class="col-md-3 mt-3">
            {{> exercise-info post}}
        </div>
        {{/each}}
    </div>
</section>

<section id = "comments" class = "position-absolute d-none" >
    <div class="container">
        <div class="row">
        <textarea name="comments" id="addComment"></textarea>
         <button class="">Add Comment</button>
        {{>comments-section posts}}
        </div>
    </div>
</section>


<script src="javascript/filter-bar.js"></script>
<script src="/javascript/comments.js"></script>
