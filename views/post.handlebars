<div class="container mt-5">
            <section class="post-hero row">
                <div class="col-md-6">
                    <img src="{{post.picture.image_url}}" alt="" />
                </div>
                <div class="col-md-6 row justify-content-center align-items-center">
                    <h1 class="col-10 post-title text-center">"{{post.title}}"</h1>
                </div>
            </section>

            <section class="row mt-3 justify-content-center">
                {{!-- description --}}
                <div class="col-12 col-md-6">{{post.description}}</div>
                {{!-- tags --}}
                <div class="col-6 col-md-3 row justify-content-center align-items-center">
                    <div class="col-7 align-items-center justify-content-center mt-4 text-end">
                        <h2>Tags:</h2>
                        <ul>
                        {{#each post.tags as |tag|}}
                        <li>
                            <h5 class="col-3 text-end w-100">{{tag.tag_title}}</h5>
                        </li>
                        {{/each}}

                        </ul>
                    </div>
                </div>
                {{!-- difficulty level --}}
                <div class="col-6 col-md-3 row justify-content-center align-items-center">
                    <div class="col-7 align-items-center justify-content-center mt-4 text-end">
                        <h2>Difficulty:</h2>
                            <h5 class="col-3 text-end w-100">{{post.difficulty.difficulty}}</h5>
                    </div>
                </div>
            </section>
            <section class="mb-3">
                {{#if loggedIn}}
                <textarea class="form-control" name="comment" id="" rows="3"></textarea>
                <div class="row">
                    <div class="upvote-container row col-6 col-md-4 align-items-center">
                        <div class="thumb-icon col-4 col-md-2">
                            <img
                                src="/icons/thumbs-up-normal.png"
                                alt="thumbs-up-icon"
                                id="thumbs-up-post"
                                onmouseover="onHover();"
                                onmouseout="offHover();"
                            />
                        </div>
                        <div class="vote-count-container col-2">
                            <h2>{{post.vote_count}}</h2>
                        </div>
                    </div>
                    <button class="btn btn-primary mt-3 col-4 justify-content-start" id="addComment">Add comment</button>
                </div>
             {{else}}

                <div class="upvote-container row col-4 align-items-center">
                        <div class="thumb-icon col-2">
                            <img
                                src="/icons/thumbs-up-normal.png"
                                alt="thumbs-up-icon"
                                id="thumbs-up-post"
                                onmouseover="onHover();"
                                onmouseout="offHover();"
                            />
                        </div>
                        <div class="vote-count-container col-2">
                            <h2>{{post.vote_count}}</h2>
                        </div>
                    </div>
                
                
            </section>
               {{/if}}
            <section class="comment-container">
                {{> comments post.comments}}
            </section>
        </div>

{{#if loggedIn}}
<script src="/javascript/add-comment.js"></script>
<script src="/javascript/vote.js"></script>
{{/if}}
<script src="/javascript/vote-func.js"></script>
