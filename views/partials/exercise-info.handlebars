<div class="card h-100" id="postId-{{id}}">
    <img src="{{picture.image_url}}" class="card-img-top" alt={{img_url}} />
    <div class="card-body position-relative ">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{format_paragraph description}}</p>
        <p class="difficulty-label position-absolute mb-0 bottom-0 end-0 me-1 mb-1">{{difficulty.difficulty}}</p>

    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item position-relative">

            <span>
                <img
                    src="icons/chat-bubble-icon.png"
                    alt="chat-icon"
                    id="chat-bubble"
                />
                {{comments.length}}
            </span>
            <span>
                <img
                    src="/icons/thumbs-up-normal.png"
                    alt="thumbs-up-icon"
                    id="thumbs-up"
                />
                {{vote_count}}
            </span>
        </li>
    </ul>
</div>
